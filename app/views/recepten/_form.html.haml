= simple_form_for @recept, html: { multipart: true } do |f|
  - if @recept.errors.any?
    #errors
      %p
        = @recept.errors.count
        Prevented this recept from saving
      %ul
        - @recept.errors.full_messages.each do |msg|
          %li= msg
  .panel.body
    = f.input :title, input_html: { class: 'form-control' }
    = f.input :description, input_html: { class: 'form-control' }

  = f.button :submit, class: "btn btn-primary"
